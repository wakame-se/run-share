<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
  <div class='nav'>
    <div class="lists-left">
      <i class="fas fa-running fa-fw fa-flip-horizontal"></i>
      <%= link_to "RunShare", posts_path, class: "header-logo-name" %>
    </div>
    <ul class='lists-right'>
      <% if user_signed_in? %>
        <li class="user-nickname", id="user-nickname"><%= current_user.nickname %></li>
        <li><%= link_to '新規投稿', new_post_path, class: "new-post" %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
      <% else %>
        <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>
  <ul class="user-page-lists hidden" id="header-pull-down">
    <% if user_signed_in? %>
      <li><%= link_to "マイページ", user_path(current_user.id), class: "my-page" %></li>
      <li><%= link_to "プロフィール情報", edit_user_path(current_user.id), class: "my-profile" %></li>
    <% end %>
  </ul>
</header>